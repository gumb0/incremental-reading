{
  "name": "incremental-reading",
  "version": "0.1.0",
  "description": "Obsidian incremental reading plugin",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
